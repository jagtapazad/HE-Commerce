<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEFEFE">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/profile_back" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:src="@drawable/ic_baseline_arrow_back_black" />

        <LinearLayout
            android:id="@+id/profileimg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:civ_border_color="@color/purple"
                    app:civ_border_width="4dp"
                    android:layout_marginTop="40dp"
                    android:elevation="-1dp"
                    android:layout_marginRight="-180dp"
                    android:src="@drawable/profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:civ_border_color="@color/purple"
                    app:civ_border_width="4dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/profile" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="80sp"
                    android:layout_marginLeft="-40dp"
                    android:background="@drawable/profile_i"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_info_24"/>

        </LinearLayout>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profileimg_layout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_arrow_back_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_account_circle_profile"/>

                        <TextView
                            android:id="@+id/FullnameProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/dosis_light"
                            />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <TextView
                            android:id="@+id/EmailProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:text=""
                            android:textIsSelectable="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/dosis_light"
                            />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_contact_phone_24"/>

                        <TextView
                            android:id="@+id/ContactProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28dp"
                            android:text=""
                            android:textIsSelectable="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/dosis_light"
                            />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_flag_black"/>

                        <TextView
                            android:id="@+id/ScoreProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/dosis_light"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="28dp" />

                </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/profileUpload2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Double Tap Profile Pic to Upload."
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/advent_pro_medium" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:elevation="-10dp"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="profile_lottie.json"
            app:lottie_loop="true"
            />

</RelativeLayout>

