<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_black"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/back"
                    />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logopurple" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Host Event"
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:text="*Please Fill Out the Form Below."
                android:textAllCaps="true"
                android:gravity="center_vertical"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/michroma"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:text="Event Type:"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"

                        android:fontFamily="@font/michroma"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:text="Head Count:"
                        android:layout_marginTop="10dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/michroma"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:text="Venue City:"
                        android:layout_marginTop="10dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"

                        android:fontFamily="@font/michroma"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:text="Date:"
                        android:layout_marginTop="10dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"

                        android:fontFamily="@font/michroma"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:text="Email:"
                        android:layout_marginTop="10dp"


                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Event Type"
                        android:id="@+id/eventtype"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/host_tiles"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="Head Count"
                        android:id="@+id/headcount"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/host_tiles"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="Venue"
                        android:id="@+id/hostvenue"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/host_tiles"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="Date                                                                                                                "
                        android:id="@+id/hostdate"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/host_tiles"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="Email"
                        android:id="@+id/hostemail"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/host_tiles"
                        />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/michroma"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:padding="10dp"
                android:text="Details of the Event:"




                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Message"
                android:padding="10dp"
                android:id="@+id/detailmessage"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:background="@drawable/host_tiles"
                />
            <Button
                android:id="@+id/sendquery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-60dp"
                android:background="#000"
                android:text="Send Enquiry"
                android:textColor="#fff"
                 />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>